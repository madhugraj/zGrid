# CORS & API keys (comma-separated). If TOX_API_KEYS is empty, auth is disabled (dev mode).
CORS_ALLOWED_ORIGINS=https://preview--zgrid-feature-flow.lovable.app,http://localhost:3000,http://localhost:5173
TOX_API_KEYS=supersecret123,toxevalyavar

# Detoxify model family: original | unbiased | multilingual
DETOXIFY_MODEL=original
DETOXIFY_THRESHOLD=0.5
DETOXIFY_LABELS=toxicity,severe_toxicity,obscene,threat,insult,identity_attack,sexual_explicit

# Mode: sentence | text   Action: remove_sentences | remove_all | redact
TOX_MODE=sentence
ACTION_ON_FAIL=remove_sentences

# Profanity layer
PROFANITY_ENABLED=1
PROFANITY_ACTION=mask          # mask | remove
PROFANITY_SENSITIVITY=0.6
PROFANITY_EXTRA_WORDS=         # comma-separated extras you want to block

# SpaCy model for sentence splitting
SPACY_SENT_MODEL=en_core_web_sm

# Offline flags (once cache is warmed) - set to 0 for first run to download models
HF_HUB_OFFLINE=0
TRANSFORMERS_OFFLINE=0
